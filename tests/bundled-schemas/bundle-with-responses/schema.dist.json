{
    "openapi": "3.0.0",
    "info": {
        "title": "Api",
        "version": "1.0"
    },
    "servers": [
        {
            "description": "production",
            "url": "..."
        }
    ],
    "paths": {
        "/sites": {
            "post": {
                "operationId": "createSite",
                "summary": "Register new site",
                "requestBody": {
                    "$ref": "#/components/requestBodies/CreateSitePayload"
                },
                "responses": {
                    "default": {
                        "description": "ok"
                    },
                    "201": {
                        "$ref": "#/components/responses/SiteResponse"
                    },
                    "400": {
                        "$ref": "#/components/responses/InputError"
                    }
                }
            }
        }
    },
    "components": {
        "responses": {
            "InputError": {
                "description": "Generic input error",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ErrorException"
                        }
                    }
                }
            },
            "SiteResponse": {
                "description": "OK",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Site"
                        }
                    }
                }
            }
        },
        "schemas": {
            "Site": {
                "title": "Site",
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "name"
                ]
            },
            "ErrorException": {
                "title": "Exception handle by underlying system",
                "type": "object",
                "readOnly": true,
                "required": [
                    "messages"
                ],
                "properties": {
                    "exception": {
                        "type": "object",
                        "properties": {
                            "message": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "requestBodies": {
            "CreateSitePayload": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Site"
                        }
                    }
                }
            }
        }
    }
}